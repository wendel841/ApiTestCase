{
    "name": "lakion/api-test-case",
    "description": "Perfect PHPUnit TestCase for JSON/XML API TDD with Symfony.",
    "keywords": ["TDD", "Symfony", "PHPUnit", "Doctrine", "API", "JSON", "XML"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Łukasz Chruściel",
            "email": "lukasz.chrusciel@lakion.com"
        },
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com",
            "email": "pawel.jedrzejewski@lakion.com"
        },
        {
            "name": "Michał Marcinkowski",
            "email": "michal.marcinkowski@lakion.com"
        },
        {
            "name": "Arkadiusz Krakowiak",
            "email": "arkadiusz.krakowiak@lakion.com"
        }
    ],
    "require": {
        "php": "^7.0",

        "coduo/php-matcher": "^2.1",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/orm": "^2.5",
        "nelmio/alice": "^3",
        "phpspec/php-diff": "^1.1",
        "phpunit/phpunit": "^6.0",
        "polishsymfonycommunity/symfony-mocker-container": "^1.0",
        "symfony/browser-kit": "^3",
        "symfony/finder": "^3",
        "symfony/framework-bundle": "^3"
    },
    "require-dev": {
        "symfony/serializer": "^3",
        "doctrine/data-fixtures": "^1.2"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Lakion\\ApiTestCase\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lakion\\ApiTestCase\\Test\\": "test/src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        }
    }
}
